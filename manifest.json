{
    "name": "ApolloNIA - Chrome Extension for Apollo Digital Footprint Search Engine",
    "description": "",
    "version": "1.0.1",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "*://localhost/*",
        "*://127.0.0.1/*"
    ],
    "browser_action": {
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        },
        "default_title": "ApolloNIA",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    }
}